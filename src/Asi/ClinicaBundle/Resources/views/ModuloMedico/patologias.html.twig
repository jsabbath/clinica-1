{% extends 'AsiClinicaBundle::clinica_template.html.twig' %}

{% block content %}


    <div class="content-module">
                
                    <div class="content-module-heading cf">
                    
                        <h3 class="fl">INGRESAR DATOS DE PATOLOGIAS</h3>
                    
                    </div> <!-- end content-module-heading -->

    <div class="content-module-main" style="display: block;">
    <div id="tabla">

        {% if (patologias) %}

        <table class="records_list">
            <thead>
                <tr>
                    <th style="width: 20%">Nombre</th>
                    <th style="width: 15%">Fecha de Diagnostico</th>
                    <th>Comentario</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
            {% for patologia in patologias %}
                <tr>
                    <td>{{ patologia.idpacientepatologia.idpatologia.nombre }}</td>
                    <td>{{ patologia.idpacientepatologia.fechadiagnostico | date('Y-m-d') }}</td>
                    <td>{{ patologia.idpacientepatologia.comentario }}</td>
                    <td>
                    <ul>
                    <a href="{{ path ('modulomedico_consulta_patologias_edit', { 'id': id, 'idpatologia': patologia.idpacientepatologia.id} ) }}">
                    {% image '@AsiClinicaBundle/Resources/public/img/actions-edit.png' %}
                    <img src="{{ asset_url }}" />
                    {% endimage %}
                    </a>
                    </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        {% endif %}

    </div>
    <div id="form">
    {{form(form)}}
    {% if (deleteform) %}
        {{form(deleteform)}}
    {% endif %}
    </div>

 <ul class="record_actions">
    <a class="round button blue small-button" href="{{ path('modulomedico_consulta_menu', { 'id' : id}) }}">
            {% image '@AsiClinicaBundle/Resources/public/img/ic_left.png' %}
            <img src="{{ asset_url }}" />
            {% endimage %}
            Regresar
    </a>
</ul>
{% endblock %}
