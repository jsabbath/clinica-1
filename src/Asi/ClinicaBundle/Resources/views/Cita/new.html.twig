{% extends 'AsiClinicaBundle::clinica_template.html.twig' %}

{% block content %}
    <div class="content-module">
                
                    <div class="content-module-heading cf">
                    
                        <h3 class="fl">CREAR CITA</h3>
                    
                    </div> <!-- end content-module-heading -->
    <div class="content-module-main" style="display: block;">

    {{ form(form) }}

    {% set link = 'recepcion_citas' %}
    {% if app.security.getToken().getUser().getIdtipousuario().getNombre() == 'Paciente'  %}
        {% set link='cita' %}
    {% endif %}
    
   
<ul class="record_actions">
    <a class="round button blue text-upper small-button" href="{{ path(link) }}" onclick= "Popup.showModal('modal');return false;">
            {% image '@AsiClinicaBundle/Resources/public/img/ic_left.png' %}
            <img src="{{ asset_url }}" />
            {% endimage %}
            REGRESAR
    </a>
</ul>
{% endblock %}
