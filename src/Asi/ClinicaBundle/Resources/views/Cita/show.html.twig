{% extends 'AsiClinicaBundle::clinica_template.html.twig' %}

{% block content %}
<div class="content-module">
                
                    <div class="content-module-heading cf">
                    
                        <h3 class="fl">EDITAR O ELIMINAR CITA</h3>
                    
                    </div> <!-- end content-module-heading -->
    <div class="content-module-main" style="display: block;">

    <table class="record_properties">

    <thead>
            <tr>
                <th>Id</th>
                <th>Fecha de realizacion</th>
                <th>Fecha de cita</th>
                <th>Hora de cita</th>
                <th>Motivo</th>
                <th>Estado</th>
                <th>Tipo de cita</th>
                <th>Acciones</th>
            </tr>
    </thead>
        <tbody>
            <tr>
                <td>{{ entity.id }}</td>
                <td>{{ entity.fecharealizacion|date('Y-m-d') }}</td>
                <td>{{ entity.iddisponibilidad.fecha|date('Y-m-d') }}</td>
                <td>{{ entity.iddisponibilidad.hora|date('H:i') }}</td>
                <td>{{ entity.comentario }}</td>
                <td>{{ entity.estado }}</td>
                <td>{{ entity.tipocita }}</td>
                <td>
                <a href="{{ path('recepcion_citas_cancelar', { 'id': entity.id }) }}" onclick= "Popup.showModal('modal');return false;">
                {% image '@AsiClinicaBundle/Resources/public/img/actions-delete.png' %}
                <img src="{{ asset_url }}" />
                {% endimage %}                
                </a>
                
                </td>
            </tr>
        </tbody>
    </table>

    <ul class="record_actions">
    <a class="round button blue text-upper small-button" href="{{ path('recepcion_citas') }}" onclick= "Popup.showModal('modal');return false;">
            {% image '@AsiClinicaBundle/Resources/public/img/ic_left.png' %}
            <img src="{{ asset_url }}" />
            {% endimage %}
            REGRESAR
    </a>
    </ul>
{% endblock %}
